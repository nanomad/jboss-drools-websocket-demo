package com.rules

import com.redhat.consulting.jboss_ws_demo.model.*

rule "Offer for Diamond"
	when
		productObject: Product(type=="diamond")
	then
		productObject.setDiscount(15);
	end
rule "Offer for Gold"
	when
		productObject: Product(type=="gold")
	then
		modify(productObject){
		    setType("diamond"),
		    setDiscount(25)
		}
	end
